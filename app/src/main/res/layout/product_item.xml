<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mainitem_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--<ImageView-->
        <!--android:id="@+id/head"-->
        <!--android:layout_width="40dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="@dimen/dimen_20_dp"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:background="@drawable/bull"-->
        <!--/>-->
        <LinearLayout
            android:id="@+id/menu_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3_dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/benefit_style"
                    android:textSize="@dimen/dimen_13_dp" />

                <TextView
                    android:id="@+id/prise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5_dp"
                    android:textColor="@color/benefit_style"
                    android:textSize="@dimen/dimen_13_dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/份"
                    android:textColor="@color/benefit_style"
                    android:textSize="@dimen/dimen_13_dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10_dp"
            android:background="@drawable/shopping_choice"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reduce"
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="—"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/shoppingNum"
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_14_dp" />

            <TextView
                android:id="@+id/increase"
                android:layout_width="@dimen/dimen_0_dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/add_food_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加料(一次五元)"
                android:textColor="@color/benefit_style"
                android:textSize="@dimen/dimen_13_dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shopping_choice"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reduce_addfood"
                    android:layout_width="@dimen/dimen_0_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="—"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/addfood_num"
                    android:layout_width="@dimen/dimen_0_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:maxLength="10"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_14_dp" />

                <TextView
                    android:id="@+id/increase_addfood"
                    android:layout_width="@dimen/dimen_0_dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>